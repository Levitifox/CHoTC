{
  "manifest_version": 3,
  "name": "Clear History on Tab Close",
  "version": "1.0",
  "description": "Clears browsing and search history when a tab is closed.",
  "permissions": [
    "storage",
    "history",
    "browsingData",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
